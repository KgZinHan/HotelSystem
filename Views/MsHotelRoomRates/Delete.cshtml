@model Hotel_Core_MVC_V1.Models.MsHotelRoomRate

@{
    ViewData["Title"] = "Hotel Room Rate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-6">
                <h4>@ViewData["Title"]</h4>
            </div>
            <div class="col-6">
                <div class="breadcrumb float-right active">
                    <a asp-action="Index" class="btn btn-primary">Back to List <i class="fas fa-back"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card card-gray">
            <div class="card-header">
                <h3 class="card-title">
                    Are you sure you want to delete this?
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayName("Room Rate Code")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Rmratecde)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Room Rate Description")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Rmratedesc)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Rate Start Date")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Daymonthstart)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Rate End Date")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Daymonthend)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Room Price")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Price)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Company")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Cmpyid)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Created Date")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Revdtetime)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Created User")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Userid)
                            </dd>
                        </dl>

                    </div>
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Rmrateid" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> 
                </form>
            </div>
        </div>
    </div>
</section>

