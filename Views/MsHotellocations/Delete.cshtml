@model Hotel_Core_MVC_V1.Models.MsHotellocation

@{
    ViewData["Title"] = "Hotel Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-6">
                <h4>@ViewData["Title"]</h4>
            </div>
            <div class="col-6">
                <div class="breadcrumb float-right active">
                    <a asp-action="Index" class="btn btn-primary">Back to List <i class="fas fa-back"></i></a>

                </div>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card card-gray">
            <div class="card-header">
                <h3 class="card-title">
                    Are you sure you want to delete this?
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayName("Hotel Location")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Loccde)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Location Description")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Locdesc)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Is Outlet?")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Isoutlet)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Company")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Cmpyid)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Created Date")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Revdtetime)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Created User")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Userid)
                            </dd>
                        </dl>

                    </div>
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Locid" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> 
                </form>
            </div>
        </div>
    </div>
</section>





