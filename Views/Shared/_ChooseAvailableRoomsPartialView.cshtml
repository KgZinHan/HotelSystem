@model IEnumerable<AvailableRoomNumber>

<script>
    $(function () {
        $("#availableRoomTable").DataTable({
            "responsive": false, "lengthChange": false, "autoWidth": false, "info": false, "paging": false,
        }).buttons().container().appendTo('#availableRoomTable_wrapper .col-md-6:eq(0)');
    });
    $(function () {
        $('.select2').select2()
        $('.select2bs4').select2({
            theme: 'bootstrap4'
        })
    });
</script>


<div class="col-12">
    <div class="row">
        <div class="col-md-12 table-responsive mt-2">
            <table id="availableRoomTable" class="table table-hover table-bordered datatable dtr-inline" aria-describedby="availableRoomTable_info">
                <thead>
                    <tr class="p-0" style="font-size: 16px;text-align: left">
                        <th>
                            No.
                        </th>
                        <th>
                            Room No.
                        </th>
                        <th>
                            Room Type
                        </th>
                        <th>
                            Location
                        </th>
                        <th>
                            Bedding
                        </th>
                        <th>
                            Price
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ledger in Model)
                    {
                        <tr style="font-size: 14px;cursor: pointer" onclick="chooseAvailableRoom('@ledger.RoomId')">
                            <td style="text-align: center">@Html.DisplayFor(modelItem => ledger.No)</td>
                            <td style="text-align: center">@Html.DisplayFor(modelItem => ledger.RoomNo)</td>
                            <td>@Html.DisplayFor(modelItem => ledger.RoomType)</td>
                            <td>@Html.DisplayFor(modelItem => ledger.Location)</td>
                            <td>@Html.DisplayFor(modelItem => ledger.BedCde)</td>
                            <td style="text-align: right">@Html.DisplayFor(modelItem => ledger.RoomPrice)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
