@model HomeModel

<div class="table-responsive">
    <div class="container-fluid">
        <input id="hiddenResvNo" asp-for="ResvNo" type="hidden"/>
        <table id="cancelResvTable" class="table table-bordered dataTable dtr-inline mt-1   " aria-describedby="example1_info">
            <thead>
                <tr class="p-0" style="font-size: 16px;text-align: left">
                    <th>
                        ContactName
                    </th>
                    <th>
                        ContactNo
                    </th>
                    <th>
                        Room Type
                    </th>
                    <th>
                        Check In Date
                    </th>
                    <th>
                        Depart Date
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr style="font-size: 14px;cursor: pointer">
                        <td>
                            @Html.DisplayFor(modelItem => modelItem.GuestName)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => modelItem.GuestNo)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => modelItem.RoomType)
                        </td>
                        <td>
                        @Convert.ToDateTime(Model.CheckInDate).ToString("dd MMM yyyy")
                        </td>
                        <td>
                        @Convert.ToDateTime(Model.DepartDate).ToString("dd MMM yyyy")
                        </td>
                    </tr>
            </tbody>
        </table>
    </div>
</div>
