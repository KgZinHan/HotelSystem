@model Hotel_Core_MVC_V1.Models.MsHotelroombedding

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h4>@ViewData["Title"]</h4>
            </div>
            <div class="col-sm-6">
                <div class="breadcrumb float-sm-right active">
                    <a asp-action="Index">Back to List <i class="fas fa-back"></i></a>

                </div>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card card-gray">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"] Details</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayName("Bedding Code")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Bedcde)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Bedding Description")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Beddesc)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Company")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Cmpyid)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Cretaed Date")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Revdtetime)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayName("Created User")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Userid)
                            </dd>
                        </dl>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Bedid">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
